<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!-- Force IE to Edge(redundant: <!doctype html> forces same behavior. Enable Chrome plugin for IE. -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Test Site</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container" class="container">
        <nav class="menu effect" id="menu">
            <h2 id="menuTop"><i class="fa fa-navicon"></i>Menu</h2>
            <ul>
                <li id="menuSearch"><a><i class="fa fa-search fa-fw fa-2x"></i>
                    <input type="text" placeholder="Search()" /></a></li>
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home fa-fw fa-2x"></i> Home</a></li>
                <li><a href="#"><i class="fa fa-info fa-fw fa-2x"></i> Info</a></li>
                <li><a href="#"><i class="fa fa-reddit-square fa-fw fa-2x"></i> R&ampD</a></li>
                <li><a href="@Url.Action("TODO", "Home")"><i class="fa fa-dashboard fa-fw fa-2x"></i> TODO</a></li>
                <li><a href="@Url.Action("Recommended", "Home")"><i class="fa fa-thumbs-o-up fa-fw fa-2x"></i> Recommended</a></li>
                <li><a href="http://www.imdb.com/title/tt0111161/?ref_=fn_al_tt_3"><i class="fa fa-film fa-fw fa-2x"></i> The Shank</a></li>
                <li><a href="@Url.Action("ContactForm", "Home")"><i class="fa fa-phone fa-fw fa-2x"></i> Contact</a></li>
            </ul>
            <i class="fa fa-anchor fa-5x menuAnchor"></i>
        </nav>

        <div class="pusher">
            <div class="content">
                <div class="content-inner">
                    <!-- extra div for emulating position:fixed of the menu -->
                    <div class="top clearfix">
                        <span id="menuBtn" data-effect="effect"><i class="fa fa-navicon fa-lg"></i>&nbsp; Menu</span>
                        <span class="middle"><input type="text" placeholder="Search is WiP" />&nbsp;&nbsp;<i class="fa fa-search fa-lg"></i></span>
                        <span class="right"><a href="@Url.Action("TODO", "Home")"><i class="fa fa-question-circle"></i><span>Help</span></a></span>
                        <span class="right"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i><span>Home</span></a></span>
                    </div>

                    @RenderSection("featured", required: false)
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
